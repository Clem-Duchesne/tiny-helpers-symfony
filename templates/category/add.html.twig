{% extends 'base.html.twig' %}
{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
<div class="container">
    
    <div class="form">
        <h1 class="title">Ajouter une catégorie</h1>
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        <div class="buttons">
            <button class="form__button">Enregistrer</button>
            <a href="{{ path( 'index' ) }}" class="back">Annuler</a>
        </div>
        {{ form_end(form) }}
       
    </div>
</div>


{% endblock %}