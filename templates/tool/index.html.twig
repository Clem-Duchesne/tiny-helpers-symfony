{% extends 'base.html.twig' %}

{% block title %}Liste de mes outils{% endblock %}

{% block body %}
<div class="myTools">
    <h1>Liste de mes outils <a href="{{ path('tool_add') }}"> + </a></h1>
    <div class="myTools__tools">
    {% for tool in tools %}
       {# {% if tool.user == user.username %} #}
        <figure class="tools__tool tool">
            <img src="{{ asset('assets/img/'~ tool.image) }}">
            <figcaption class="tool__informations">
                <h2>{{ tool.name }}</h2>
                <ul class="tool__tagsList">
                    <li class="tool__tag">Catégorie(s)</li>
                    <li class="tool__tag">Catégorie(s)</li>
                </ul>
                <p class="tool__description">{{ tool.description }}</p>
                <a class="tool__link" target="_blank" href="{{ tool.link }}">Voir le site</a>
            </figcaption>
            <div class="tool__date"><p>{{ tool.dateToString() }}</p></div>
        </figure>
        {# {% endif %} #}
    {% endfor %}
    </div>
</div>
{% endblock %}
